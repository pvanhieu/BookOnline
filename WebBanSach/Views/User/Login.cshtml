@model WebBanSach.Models.KhachHang
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<div class="row nav-justified-content-md-center">
    <div class="col-md-5">

        @using (Html.BeginForm("Login1", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-5">Tên đăng nhập</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.TenDN, "", new { @class = "form-control", @placeholder = "" })
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-5">Mật khẩu</label>
                        <div class="col-md-7">
                            @Html.PasswordFor(m => m.Matkhau, new { @class = "form-control", @placeholder = "" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5"></label>
                        <div class="col-md-7">
                            <input type="submit" name="submit" class="btn btn-primary" value="Login" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>