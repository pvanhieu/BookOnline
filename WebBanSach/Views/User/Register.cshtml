@model WebBanSach.Models.KhachHang
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 >Đăng ký thành viên</h2>

<div class="row nav-justified-content-md-center">
    <div class="col-md-5">
        @using (Html.BeginForm("Register1", "User", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="card">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-5">Họ tên</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.HoTenKH, "", new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.HoTenKH, "", new { @class = "badge badge-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-5">Tên đăng nhập</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.TenDN, "", new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.TenDN, "", new { @class = "badge badge-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-5">Mật khẩu</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Matkhau, "", new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.Matkhau, "", new { @class = "badge badge-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5">Ngày sinh</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Ngaysinh, "", new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.Ngaysinh, "", new { @class = "badge badge-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5">Email</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5">Địa chỉ</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Diachi, "", new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.Diachi, "", new { @class = "badge badge-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-5">Điện thoại</label>
                        <div class="col-md-7">
                            @Html.TextBoxFor(m => m.Dienthoai, "", new { @class = "form-control", @placeholder = "" })
                            @Html.ValidationMessageFor(m => m.Dienthoai, "", new { @class = "badge badge-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-5"></label>
                        <div class="col-md-7">
                            <input type="submit" name="submit" class="btn btn-info" value="Đăng ký" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section scripts{
    @Scripts.Render("~bundles/jqueryval")
}

